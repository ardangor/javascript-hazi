<%- include('header') -%>
    <%- include('menu') -%>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-sm-12 col-md-8 col-xl-8">
                    <form method="POST">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">Email</th>
                                    <th scope="col">Permission</th>
                                    <th scope="col">Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <div class="form-group">
                                            <input type="text" class="form-control" placeholder="Enter email" name="email"
                                                value="<%= (typeof user === 'undefined') ? '' : user.email %>">
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-group">
                                            <input type="text" class="form-control" placeholder="Enter username" name="username"
                                                value="<%= (typeof user === 'undefined') ? '' : user.username %>">
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-group">
                                            <input type="text" class="form-control" placeholder="Enter permission" name="permission"
                                                value="<%= (typeof user === 'undefined') ? '' : user.permission %>">
                                        </div>
                                    </td>
                                </tr>
                    </form>
                    </tbody>
                    </table>
                    <input type="submit" margin-top:10px; class="btn btn-primary" value="Save" />
                    <a href="/users" class="btn btn-danger">Cancel</a>
                </div>
            </div>
        </div>
        <%- include('footer') -%>